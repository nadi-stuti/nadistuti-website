---
import { getLanguageFromURL, getLocalizedPath, type Language } from '../i18n';
import { t } from '../i18n/translations';

const currentLang = getLanguageFromURL(Astro.url.pathname);
---

<footer class="bg-gray-900 text-white">
  <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Logo and Description -->
      <div class="col-span-1 md:col-span-2 lg:col-span-1">
        <div class="flex items-center space-x-2 mb-4">
          <img 
              src="/favicon.png" 
              alt="Brahmaputra in Assam" 
              class="w-12"
            />
          <span class="text-xl font-bold">Nadi Stuti</span>
        </div>
        <p class="text-gray-300 mb-4 max-w-md text-multilang">
          {t('home.mission', currentLang)}
        </p>
        <div class="flex space-x-4">
          <a href="https://github.com/nadi-stuti/website" class="text-gray-400 hover:text-white transition-colors">
            <span class="sr-only">GitHub</span>
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase mb-4">{t('footer.quickLinks', currentLang)}</h3>
        <ul class="space-y-2">
          <li><a href={getLocalizedPath('/', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('nav.home', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('nav.rivers', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/events', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('nav.events', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/apps', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('nav.apps', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/community', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('nav.community', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/watch', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('nav.watch', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/donate', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('nav.donate', currentLang)}</a></li>
        </ul>
      </div>

      <!-- Rivers Column 1 -->
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase mb-4">{t('footer.holyRivers', currentLang)}</h3>
        <ul class="space-y-2">
          <li><a href={getLocalizedPath('/rivers/ganga', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.ganga', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers/yamuna', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.yamuna', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers/saraswati', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.saraswati', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers/krishna', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.krishna', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers/kaveri', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.kaveri', currentLang)}</a></li>
        </ul>
      </div>

      <!-- Rivers Column 2 -->
      <div>
        <h3 class="text-sm font-semibold text-gray-400 tracking-wider uppercase mb-4 lg:opacity-0">{t('footer.holyRivers', currentLang)}</h3>
        <ul class="space-y-2">
          <li><a href={getLocalizedPath('/rivers/godavari', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.godavari', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers/brahmaputra', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.brahmaputra', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers/narmada', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.narmada', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers/indus', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.indus', currentLang)}</a></li>
          <li><a href={getLocalizedPath('/rivers/mahanadi', currentLang)} class="text-gray-300 hover:text-white transition-colors">{t('river.mahanadi', currentLang)}</a></li>
        </ul>
      </div>
    </div>

    <div class="mt-8 border-t border-gray-700 pt-8">
      <div class="text-center space-y-4">
        <p class="text-gray-400 text-sm">
          ¬© 2025 Nadi Stuti. Open source project dedicated to preserving the cultural heritage of India's sacred rivers.
        </p>
        
        <!-- Company Information Section - Enhanced -->
        <div class="bg-gray-800 rounded-lg p-6 mx-auto max-w-4xl border border-gray-600">
          <div class="space-y-4">
            <p class="text-white text-base font-semibold">
              {t('footer.company', currentLang)}
            </p>
            <div class="space-y-3">
              <p class="text-gray-300 text-sm font-medium">{t('footer.contact', currentLang)}</p>
              <div class="flex flex-col lg:flex-row lg:justify-center lg:space-x-8 space-y-3 lg:space-y-0">
                <div class="flex items-center justify-center space-x-2 bg-gray-700 rounded-md px-4 py-2 hover:bg-gray-600 transition-colors">
                  <span class="text-lg">üìß</span>
                  <a href="mailto:nadi.stuti@nulligma.com" class="text-blue-400 hover:text-blue-300 transition-colors font-medium">nadi.stuti@nulligma.com</a>
                </div>
                <div class="flex items-center justify-center space-x-2 bg-gray-700 rounded-md px-4 py-2 hover:bg-gray-600 transition-colors">
                  <span class="text-lg">üìû</span>
                  <span class="text-gray-300">{t('footer.phone', currentLang)}:</span>
                  <a href="tel:+919340708756" class="text-blue-400 hover:text-blue-300 transition-colors font-medium">+91-9340708756</a>
                </div>
                <div class="flex items-center justify-center space-x-2 bg-gray-700 rounded-md px-4 py-2 hover:bg-gray-600 transition-colors">
                  <span class="text-lg">üåê</span>
