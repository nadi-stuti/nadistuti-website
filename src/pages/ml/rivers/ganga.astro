---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getLanguageFromURL, getLocalizedPath } from '../../../i18n';
import { t } from '../../../i18n/translations';
const currentLang = 'ml';
---

<Layout 
  title={`${t('river.ganga', currentLang)} - Nadi Stuti`} 
  description={`Discover the sacred ${t('river.ganga', currentLang)} river`}
  lang={currentLang}
>
  <Header />
  
    
  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b border-gray-200" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-4 py-4">
        <a 
          href={getLocalizedPath("/", currentLang)}
          class="text-gray-500 hover:text-gray-700 transition-colors"
        >
          {t("ui.home", currentLang)}
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a 
          href={getLocalizedPath("/rivers", currentLang)}
          class="text-gray-500 hover:text-gray-700 transition-colors"
        >
          {t("nav.rivers", currentLang)}
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium">
          {t(`river.ganga`, currentLang)}
        </span>
      </div>
    </div>
  </nav><main>
        
    <!-- Hero Section -->
    <section class="relative h-96 overflow-hidden">
      <div class="absolute inset-0">
        <img 
          src="/images/ganga-varanasi.jpg" 
          alt="Ganga at Varanasi" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>
      <div class="relative z-10 h-full flex items-center justify-center text-white text-center">
        <div>
          <h1 class="text-5xl font-bold mb-4 text-multilang">
            <span class="block text-2xl font-normal mb-2 text-blue-200 font-sanskrit">
              {/* Sanskrit name will be added based on language */}
            </span>
            {t('river.ganga', currentLang)}
          </h1>
          <p class="text-xl text-gray-200 text-multilang">{t('river.hero.subtitle', currentLang)}</p>
        </div>
      </div>
    </section>

    <!-- Content Sections -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- {t('river.geographical.title', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.geographical.title', currentLang)}</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-blue-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.basic.info', currentLang)}</h3>
            <dl class="space-y-2">
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.source', currentLang)}</dt>\n                <dd class="text-gray-900">{t('ganga.source.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.length', currentLang)}</dt>\n                <dd class="text-gray-900">{t('ganga.length.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.basin.area', currentLang)}</dt>\n                <dd class="text-gray-900">{t('ganga.basin.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.mouth', currentLang)}</dt>\n                <dd class="text-gray-900">{t('ganga.mouth.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.states', currentLang)}</dt>\n                <dd class="text-gray-900">{t('ganga.states.value', currentLang)}</dd>
              </div>
            </dl>
          </div>
          
          <div class="bg-orange-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.sacred.geography', currentLang)}</h3>
            <ul class="space-y-2 text-gray-700">
              <li>• <strong>Gangotri:</strong> Source and sacred shrine</li>
              <li>• <strong>Haridwar:</strong> Gateway to the plains</li>
              <li>• <strong>Rishikesh:</strong> Yoga capital of the world</li>
              <li>• <strong>Allahabad:</strong> Confluence with Yamuna</li>
              <li>• <strong>Varanasi:</strong> Holiest city on Ganga</li>
              <li>• <strong>Ganga Sagar:</strong> Meeting with the ocean</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- {t('river.major.tributaries', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.major.tributaries', currentLang)}</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.right.bank', currentLang)}</h3>
            <ul class="space-y-3">
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-blue-500">
                <strong class="text-gray-900">Yamuna:</strong>
                <span class="text-gray-600"> The largest tributary, joins at Allahabad</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-blue-500">
                <strong class="text-gray-900">Son:</strong>
                <span class="text-gray-600"> Major tributary in Bihar</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-blue-500">
                <strong class="text-gray-900">Punpun:</strong>
                <span class="text-gray-600"> Flows through Bihar</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.left.bank', currentLang)}</h3>
            <ul class="space-y-3">
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-green-500">
                <strong class="text-gray-900">Ramganga:</strong>
                <span class="text-gray-600"> Joins in Uttar Pradesh</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-green-500">
                <strong class="text-gray-900">Gomti:</strong>
                <span class="text-gray-600"> Flows through Lucknow</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-green-500">
                <strong class="text-gray-900">Gandak:</strong>
                <span class="text-gray-600"> Originates in Nepal</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-green-500">
                <strong class="text-gray-900">Kosi:</strong>
                <span class="text-gray-600"> Known as the "Sorrow of Bihar"</span>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Cultural and Religious Significance -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.cultural.significance', currentLang)}</h2>
        <div class="prose prose-lg max-w-none">
          <div class="bg-gradient-to-r from-orange-50 to-yellow-50 p-8 rounded-lg mb-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.hindu.tradition', currentLang)}</h3>
            <p class="text-gray-700 leading-relaxed">
              Ganga is revered as a goddess in Hindu tradition. According to mythology, she descended from heaven to earth 
              through the matted locks of Lord Shiva to purify the souls of King Bhagiratha's ancestors. The river is 
              considered the most sacred, and a dip in its waters is believed to wash away sins and grant moksha (liberation).
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-blue-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-gray-900 mb-3">{t('river.sacred.festivals', currentLang)}</h4>
              <ul class="space-y-2 text-gray-700">
                <li>• <strong>Kumbh Mela:</strong> World's largest religious gathering</li>
                <li>• <strong>Ganga Aarti:</strong> Daily evening prayers</li>
                <li>• <strong>Ganga Dussehra:</strong> Celebrates Ganga's descent</li>
                <li>• <strong>Kartik Purnima:</strong> Sacred bathing day</li>
              </ul>
            </div>
            
            <div class="bg-green-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-gray-900 mb-3">{t('river.spiritual.practices', currentLang)}</h4>
              <ul class="space-y-2 text-gray-700">
                <li>• <strong>Sacred Bath:</strong> Purification of sins</li>
                <li>• <strong>Ganga Jal:</strong> Holy water for rituals</li>
                <li>• <strong>Asthi Visarjan:</strong> Immersion of ashes</li>
                <li>• <strong>Meditation:</strong> Spiritual contemplation by the banks</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- {t('river.scriptural.references', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.scriptural.references', currentLang)}</h2>
        <div class="space-y-6">
          <div class="bg-gradient-to-r from-orange-100 to-yellow-100 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Rig Veda 10.75</h3>
            <blockquote class="text-gray-800 italic mb-3 font-sanskrit text-lg">
              "इमं मे गङ्गे यमुने सरस्वति शुतुद्रि स्तोमं सचता परुष्ण्या"
            </blockquote>
            <p class="text-gray-700">
              "Listen to this my praise, O Ganga, Yamuna, Saraswati..." - The first mention of Ganga in Vedic literature.
            </p>
          </div>
          
          <div class="bg-blue-100 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Bhagavata Purana</h3>
            <p class="text-gray-700">
              "The water of the Ganga is always pure and sacred. It purifies all sins and grants liberation to those who bathe in it with devotion."
            </p>
          </div>
          
          <div class="bg-green-100 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Skanda Purana</h3>
            <p class="text-gray-700">
              "Among all rivers, Ganga is the most sacred. She is the path to heaven and the destroyer of sins."
            </p>
          </div>
        </div>
      </section>

      <!-- Download PDF -->
      <section class="text-center">
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-4">{t('river.complete.info', currentLang)}</h3>
          <p class="text-blue-100 mb-6">
            {t('river.download.pdf', currentLang)}
          </p>
          <a 
            href="/data/river report/Ganga-report.pdf"  target="_blank"
            class="inline-flex items-center bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-all transform hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Download Ganga PDF
          </a>
        </div>
      </section>
    </div>
    <!-- Back to Rivers Button -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-t border-gray-200 mt-16">
      <a 
        href={getLocalizedPath("/rivers", currentLang)}
        class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors group"
      >
        <svg 
          class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        {t("ui.back_to_rivers", currentLang)}
      </a>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .font-sanskrit {
    font-family: 'Noto Sans Devanagari', 'Arial Unicode MS', sans-serif;
  }
</style>

