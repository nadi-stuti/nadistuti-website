---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import AudioPlayer from "../../components/AudioPlayer";
import {
  getLanguageFromURL,
  getLocalizedPath,
  type Language,
} from "../../i18n";
import { t } from "../../i18n/translations";

const currentLang = getLanguageFromURL(Astro.url.pathname);
---

<Layout
  title={t("home.title", currentLang)}
  description={t("home.subtitle", currentLang)}
  lang={currentLang}
>
  <Header />

  <main class="">
    <!-- Hero Section -->
    <section
      class="relative min-h-screen flex items-center justify-center overflow-hidden selection:bg-amber-700"
    >
      <!-- Background Image -->
      <div class="absolute inset-0 z-0">
        <img
          src="/images/ganga-sunrise.jpg"
          alt="Sacred Ganga at sunrise"
          class="w-full h-full object-cover"
          loading="eager"
        />
        <div class="absolute inset-0 bg-black/40"></div>
      </div>

      <!-- Content -->
      <div
        class="relative z-10 max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white"
      >
        <h1
          class="text-4xl md:text-6xl font-bold mb-6 leading-tight text-multilang"
        >
          <span
            class="block text-2xl md:text-3xl font-normal mb-2 text-orange-200 font-sanskrit"
            >नदीस्तुति</span
          >
          {t("home.name", currentLang)}
        </h1>
        <p
          class="text-xl md:text-2xl mb-8 text-gray-200 max-w-3xl mx-auto text-multilang"
        >
          {t("home.subtitle", currentLang)}
        </p>

        <!-- Mission Statement -->
        <div
          class="bg-white/10 backdrop-blur-md rounded-lg p-6 mb-8 max-w-3xl mx-auto"
        >
          <p class="text-lg text-gray-100 text-multilang">
            "{t("home.mission", currentLang)}"
          </p>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#hymn"
            class="bg-gradient-to-r from-amber-600 to-amber-800 hover:from-amber-700 hover:to-amber-800 text-white px-8 py-3 rounded-lg font-semibold transition-all transform hover:scale-105"
          >
            {t("home.read_hymn", currentLang)}
          </a>
          <a
            href={getLocalizedPath("/rivers", currentLang)}
            class="bg-white/20 backdrop-blur-md hover:bg-white/30 text-white px-8 py-3 rounded-lg font-semibold transition-all border border-white/30"
          >
            {t("home.explore_rivers", currentLang)}
          </a>
        </div>
      </div>

      <!-- Scroll Indicator -->
      <div
        class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce"
      >
        <svg
          class="w-6 h-6 text-white"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
        </svg>
      </div>
    </section>

    <!-- Rig Veda Hymn Section -->
    <section id="hymn" class="py-16 bg-white">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2
            class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-multilang"
          >
            {t("hymn.title", currentLang)}
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto text-multilang">
            {t("hymn.description", currentLang)}
          </p>
        </div>

        <!-- Audio Player -->
        <div class="mb-12">
          <AudioPlayer client:load />
        </div>

        <!-- Sanskrit Text and Translation -->
        <div class="grid md:grid-cols-2 gap-8 mb-12">
          <!-- Sanskrit Text -->
          <div
            class="bg-gradient-to-br from-orange-50 to-yellow-50 p-6 rounded-lg"
          >
            <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center">
              Sanskrit Text
            </h3>
            <div
              class="space-y-4 text-lg leading-relaxed font-sanskrit text-indic"
            >
              <p class="text-center text-gray-800">
                प्र सु व॑ आपो महि॒मान॑मुत्त॒मं का॒रुर्वो॑चाति॒ सद॑ने वि॒वस्व॑तः
                ।<br />
                प्र स॒प्तस॑प्त त्रे॒धा हि च॑क्र॒मुः प्र सृत्व॑रीणा॒मति॒ सिन्धु॒रोज॑सा
                ॥ (1)
              </p>
              <p class="text-center text-gray-800">
                प्र ते॑ऽरद॒द्वरु॑णो॒ यात॑वे प॒थः सिन्धो॒ यद्वाजाँ॑
                अ॒भ्यद्र॑व॒स्त्वम्<br />
                भूम्या॒ अधि॑ प्र॒वता॑ यासि॒ सानु॑ना॒ यदे॑षा॒मग्रं॒ जग॑तामिर॒ज्यसि॑
                ॥ (2)
              </p>
              <p class="text-center text-gray-800">
                दि॒वि स्व॒नो य॑तते॒ भूम्यो॒पर्य॑न॒न्तं शुष्म॒मुदि॑यर्ति भा॒नुना॑
                ।<br />
                अ॒भ्रादि॑व॒ प्र स्त॑नयन्ति वृ॒ष्टय॒: सिन्धु॒र्यदेति॑ वृष॒भो न रोरु॑वत्
                ॥ (3)
              </p>
            </div>
          </div>

          <!-- Translation -->
          <div
            class="bg-gradient-to-br from-blue-50 to-indigo-50 p-6 rounded-lg"
          >
            <h3 class="text-xl font-semibold text-gray-900 mb-4 text-center">
              {
                currentLang === "en"
                  ? "English Translation"
                  : currentLang === "hi"
                    ? "हिन्दी अनुवाद"
                    : currentLang === "ta"
                      ? "தமிழ் மொழிபெயர்ப்பு"
                      : currentLang === "te"
                        ? "తెలుగు అనువాదం"
                        : currentLang === "kn"
                          ? "ಕನ್ನಡ ಅನುವಾದ"
                          : currentLang === "ml"
                            ? "മലയാളം വിവർത്തനം"
                            : currentLang === "bn"
                              ? "বাংলা অনুবাদ"
                              : currentLang === "gu"
                                ? "ગુજરાતી અનુવાદ"
                                : currentLang === "mr"
                                  ? "मराठी भाषांतर"
                                  : currentLang === "pa"
                                    ? "ਪੰਜਾਬੀ ਅਨੁਵਾਦ"
                                    : currentLang === "or"
                                      ? "ଓଡ଼ିଆ ଅନୁବାଦ"
                                      : currentLang === "as"
                                        ? "অসমীয়া অনুবাদ"
                                        : "Translation"
              }
            </h3>
            <div class="space-y-4 text-gray-700 leading-relaxed text-multilang">
              {
                currentLang === "en" && (
                  <>
                    <p>
                      “Waters, the worshipper addresses to you excellent praise
                      in the dwelling of the instrumental tutor of the rite;they
                      flowed by sevens through the three (worlds); but the
                      Sindhu surpasses (all) the (other) streams in strength.”
                      (1)
                    </p>
                    <p>
                      “For your course, Sindhu, Varuṇa tore open a path, since
                      you hastened towards food; you go by alofty road down upon
                      the earth, by which (road) you reign in the sight of all
                      worlds.” (2)
                    </p>
                    <p>
                      “The sound goes forth in heaven above the earth; (Sindhu)
                      with shining wave animates his endlessspeed; as rains
                      issue thundering from the cloud, so Sindhu (thunders) when
                      he advances roaring like a bull.” (3)
                    </p>
                  </>
                )
              }
              {
                currentLang === "hi" && (
                  <>
                    <p>
                      "हे गंगा, यमुना, सरस्वती, शुतुद्रि और परुष्णी, असिक्नी,
                      मरुद्वृधा, वितस्ता, आर्जीकीया और सुषोमा के साथ, मेरी इस
                      स्तुति को सुनो।"
                    </p>
                    <p>
                      "पहले त्रिष्टामा के साथ, फिर सुसर्तवा, रसया और श्वेत्या के
                      साथ, हे सिंधु, कुभा, गोमती, क्रुमु और मेहत्नु के साथ तुम
                      बहती हो।"
                    </p>
                    <p>
                      "जो जल बहते हैं, जो नदियां गायों की तरह चलती हैं, जिनके
                      बीच राजा वरुण विचरता है, लोगों के सत्य और असत्य को देखता
                      है।"
                    </p>
                  </>
                )
              }
              {
                currentLang === "ta" && (
                  <>
                    <p>
                      "கங்கை, யமுனை, சரஸ்வதி, சுதுத்ரி மற்றும் பருஷ்ணி, அசிக்னி,
                      மருத்வ்ருதா, விதஸ்தா, ஆர்ஜீகியா மற்றும் சுஷோமாவுடன்
                      சேர்ந்து, என் இந்த துதியைக் கேளுங்கள்."
                    </p>
                    <p>
                      "முதலில் திரிஷ்டாமாவுடன், பின்னர் சுசர்தவா, ரசயா மற்றும்
                      ஸ்வேத்யாவுடன், சிந்து, குபா, கோமதி, க்ருமு மற்றும்
                      மேஹத்னுவுடன் நீங்கள் ஒன்றாக பாய்கிறீர்கள்."
                    </p>
                    <p>
                      "பாயும் நீர், பசுக்களைப் போல நகரும் நதிகள், அவற்றின்
                      நடுவில் அரசன் வருணன் மக்களின் உண்மையையும் பொய்யையும்
                      கவனித்துக்கொண்டு நடமாடுகிறான்."
                    </p>
                  </>
                )
              }
              {/* Add more language translations as needed */}
              {
                !["en", "hi", "ta"].includes(currentLang) && (
                  <p class="text-gray-500 italic">
                    Translation in {currentLang} is being prepared. Please check
                    back soon or help us translate!
                  </p>
                )
              }
            </div>
          </div>
        </div>

        <!-- Download PDF Button -->
        <div class="text-center">
          <a
            href="/data/stuti/rigved/nadi-stuti-hindi.pdf"
            target="_blank"
            class="inline-flex items-center bg-gradient-to-r from-orange-500 to-red-500 hover:from-orange-600 hover:to-red-600 text-white px-8 py-3 rounded-lg font-semibold transition-all transform hover:scale-105"
          >
            <svg
              class="w-5 h-5 mr-2"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              ></path>
            </svg>
            {t("ui.download_pdf", currentLang)}
          </a>
        </div>
      </div>
    </section>

    <!-- Rivers Overview Section -->
    <section class="py-16 bg-gradient-to-br from-blue-50 to-indigo-100">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2
            class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-multilang"
          >
            {t("rivers.title", currentLang)}
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto text-multilang">
            {t("rivers.description", currentLang)}
          </p>
        </div>

        <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
          {
            [
              { name: "Ganga", sanskrit: "गङ्गा", href: "/rivers/ganga" },
              { name: "Yamuna", sanskrit: "यमुना", href: "/rivers/yamuna" },
              {
                name: "Saraswati",
                sanskrit: "सरस्वती",
                href: "/rivers/saraswati",
              },
              { name: "Krishna", sanskrit: "कृष्णा", href: "/rivers/krishna" },
              { name: "Kaveri", sanskrit: "कावेरी", href: "/rivers/kaveri" },
              {
                name: "Godavari",
                sanskrit: "गोदावरी",
                href: "/rivers/godavari",
              },
              {
                name: "Brahmaputra",
                sanskrit: "ब्रह्मपुत्र",
                href: "/rivers/brahmaputra",
              },
              { name: "Narmada", sanskrit: "नर्मदा", href: "/rivers/narmada" },
              { name: "Indus", sanskrit: "सिन्धु", href: "/rivers/indus" },
              {
                name: "Mahanadi",
                sanskrit: "महानदी",
                href: "/rivers/mahanadi",
              },
            ].map((river) => (
              <a
                href={getLocalizedPath(river.href, currentLang)}
                class="group bg-white rounded-lg p-4 shadow-md hover:shadow-lg transition-all transform hover:scale-105"
              >
                <div class="text-center">
                  <div class="text-2xl font-sanskrit text-blue-600 mb-2 text-indic">
                    {river.sanskrit}
                  </div>
                  <div class="text-sm font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                    {t(
                      `river.${river.name.toLowerCase()}` as keyof typeof import("../../i18n/translations").translations,
                      currentLang,
                    ) || river.name}
                  </div>
                </div>
              </a>
            ))
          }
        </div>

        <div class="text-center mt-12">
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href={getLocalizedPath("/rivers#map", currentLang)}
              class="inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-8 py-3 rounded-lg font-semibold transition-all"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4M9 7l6 3m0 0l6-3"
                ></path>
              </svg>
              {t("ui.view_map", currentLang)}
            </a>
            <a
              href={getLocalizedPath("/rivers#calendar", currentLang)}
              class="inline-flex items-center bg-emerald-600 hover:bg-emerald-700 text-white px-8 py-3 rounded-lg font-semibold transition-all"
            >
              <svg
                class="w-5 h-5 mr-2"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-6 0h6m-6 0V7a1 1 0 00-1 1v10a1 1 0 001 1h8a1 1 0 001-1V8a1 1 0 00-1-1h-1"
                ></path>
              </svg>
              {t("ui.view_calendar", currentLang)}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Our Mission Section -->
    <section
      class="py-20 bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50"
    >
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2
            class="text-3xl md:text-4xl font-bold text-gray-900 mb-6 text-multilang"
          >
            {t("mission.title", currentLang)}
          </h2>
          <p
            class="text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed text-multilang"
          >
            {t("mission.description", currentLang)}
          </p>
        </div>

        <div class="grid lg:grid-cols-2 gap-12 mb-16">
          <!-- Left Column -->
          <div class="space-y-8">
            <!-- App Developers Platform -->
            <div
              class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-purple-100"
            >
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div
                    class="w-12 h-12 bg-gradient-to-r from-purple-500 to-indigo-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3
                    class="text-xl font-bold text-gray-900 mb-3 text-multilang"
                  >
                    {t("mission.appDevelopers.title", currentLang)}
                  </h3>
                  <p class="text-gray-600 leading-relaxed text-multilang">
                    {t("mission.appDevelopers.description", currentLang)}
                  </p>
                </div>
              </div>
            </div>

            <!-- Knowledge Consolidation -->
            <div
              class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-emerald-100"
            >
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div
                    class="w-12 h-12 bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                      ></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3
                    class="text-xl font-bold text-gray-900 mb-3 text-multilang"
                  >
                    {t("mission.knowledge.title", currentLang)}
                  </h3>
                  <p class="text-gray-600 leading-relaxed text-multilang">
                    {t("mission.knowledge.description", currentLang)}
                  </p>
                </div>
              </div>
            </div>

            <!-- Content Creators Support -->
            <div
              class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-red-100"
            >
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div
                    class="w-12 h-12 bg-gradient-to-r from-red-500 to-pink-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"
                      ></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3
                    class="text-xl font-bold text-gray-900 mb-3 text-multilang"
                  >
                    {t("mission.creators.title", currentLang)}
                  </h3>
                  <p class="text-gray-600 leading-relaxed text-multilang">
                    {t("mission.creators.description", currentLang)}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Right Column -->
          <div class="space-y-8">
            <!-- Artisan Empowerment -->
            <div
              class="bg-white rounded-2xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 border border-amber-100"
            >
              <div class="flex items-start space-x-4">
                <div class="flex-shrink-0">
                  <div
                    class="w-12 h-12 bg-gradient-to-r from-amber-500 to-orange-600 rounded-xl flex items-center justify-center"
                  >
                    <svg
                      class="w-6 h-6 text-white"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1">
                  <h3
                    class="text-xl font-bold text-gray-900 mb-3 text-multilang"
                  >
                    {t("mission.artisan.title", currentLang)}
                  </h3>
                  <p class="text-gray-600 leading-relaxed text-multilang">
                    {t("mission.artisan.description", currentLang)}
                  </p>
                </div>
