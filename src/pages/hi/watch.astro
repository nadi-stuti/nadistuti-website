    document.addEventListener("DOMContentLoaded", function () {
      const contentFilter = document.getElementById("contentFilter");
      const searchInput = document.getElementById("videoSearch");

      // Show/hide sections based on filter
      contentFilter.addEventListener("change", function () {
        const selectedValue = this.value;
        const sections = {
          featured: document.getElementById("featured"),
          all: document.getElementById("all-videos"),
          playlists: document.getElementById("playlists"),
          channels: document.getElementById("channels"),
        };

        // Hide all sections
        Object.values(sections).forEach((section) => {
          if (section) section.style.display = "none";
        });

        // Show selected section or all if 'all' is selected
        if (selectedValue === "all") {
          Object.values(sections).forEach((section) => {
            if (section) section.style.display = "block";
          });
        } else if (sections[selectedValue]) {
          sections[selectedValue].style.display = "block";
        }
      });

