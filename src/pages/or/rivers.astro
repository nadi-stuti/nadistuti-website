    <!-- Map Section -->
    <section id="map" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Interactive River Map</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Click on any river to learn about its significance, journey, and cultural importance
          </p>
        </div>

        <!-- Map Container -->
        <div class="bg-white rounded-xl shadow-2xl overflow-hidden">
          <InteractiveMap client:load />
        </div>

        <!-- Instructions -->
        <div class="mt-8 bg-white/80 backdrop-blur-md rounded-lg p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-3">How to Use</h3>
          <div class="grid md:grid-cols-3 gap-4 text-sm text-gray-600">
            <div class="flex items-start space-x-2">
              <div
                class="w-6 h-6 bg-blue-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5"
              >
                <span class="text-white text-xs font-bold">1</span>
              </div>
              <p>
                Hover over river names in the sidebar to highlight them on the
                map
              </p>
            </div>
            <div class="flex items-start space-x-2">
              <div
                class="w-6 h-6 bg-orange-500 rounded-full flex items-center justify-center flex-shrink-0 mt-0.5"
              >
                <span class="text-white text-xs font-bold">2</span>
              </div>
              <p>
                Click on any river name to visit its dedicated information page
              </p>
            </div>
            <div class="flex items-start space-x-2">
