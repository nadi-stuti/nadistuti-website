---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getLanguageFromURL } from '../../i18n';
import { t } from '../../i18n/translations';

const currentLang = getLanguageFromURL(Astro.url.pathname);
---

<Layout 
  title={t('community.title', currentLang)} 
  description={t('community.description', currentLang)}
  lang={currentLang}
>
  <Header />
  
  <main class="min-h-screen bg-blue-500">
    <!-- Hero Section -->
    <section class="py-16 bg-gradient-to-r from-teal-600 to-cyan-700 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="flex justify-center mb-6">
            <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
          </div>
          <h1 class="text-4xl md:text-6xl font-bold mb-6">{t('community.title', currentLang)}</h1>
          <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-4xl mx-auto">
            {t('community.description', currentLang)}
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#platforms" class="bg-white text-cyan-600 px-8 py-3 rounded-lg font-semibold hover:bg-cyan-50 transition-all transform hover:scale-105">
              {t('community.joinCommunity', currentLang)}
            </a>
            <a href="#guidelines" class="bg-cyan-800 text-white px-8 py-3 rounded-lg font-semibold hover:bg-cyan-900 transition-all border border-cyan-500">
              {t('community.viewGuidelines', currentLang)}
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Community Platforms -->
    <section id="platforms" class="py-16 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">{t('community.joinOurPlatforms', currentLang)}</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            {t('community.platformsDescription', currentLang)}
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
          
          <!-- WhatsApp Group -->
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.700"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{t('community.whatsapp.title', currentLang)}</h3>
                <p class="text-sm text-gray-600">{t('community.whatsapp.subtitle', currentLang)}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4 text-multilang">
              {t('community.whatsapp.description', currentLang)}
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">2,847 members</span>
              <a href="https://chat.whatsapp.com/KNCtYWiR6D856Yaup7iRZ9" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                {t('community.joinGroup', currentLang)}
              </a>
            </div>
          </div>

          <!-- Discord Server -->
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-indigo-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{t('community.discord.title', currentLang)}</h3>
                <p class="text-sm text-gray-600">{t('community.discord.subtitle', currentLang)}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4 text-multilang">
              {t('community.discord.description', currentLang)}
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">1,523 members</span>
              <a href="https://discord.gg/nadistuti" class="bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                {t('community.joinServer', currentLang)}
              </a>
            </div>
          </div>

          <!-- Telegram Channel -->
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M11.944 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0a12 12 0 0 0-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 0 1 .171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.48.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{t('community.telegram.title', currentLang)}</h3>
                <p class="text-sm text-gray-600">{t('community.telegram.subtitle', currentLang)}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4 text-multilang">
              Subscribe to our Telegram channel for the latest news, announcements, new river content, and exclusive behind-the-scenes updates.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">5,234 subscribers</span>
              <a href="https://t.me/nadistuti" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                {t('community.subscribe', currentLang)}
              </a>
            </div>
          </div>

          <!-- YouTube Channel -->
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-red-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{t('community.youtube.title', currentLang)}</h3>
                <p class="text-sm text-gray-600">{t('community.youtube.subtitle', currentLang)}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4 text-multilang">
              Watch our educational videos, documentaries about sacred rivers, Sanskrit pronunciation guides, and virtual pilgrimage experiences.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">12.5K subscribers</span>
              <a href="https://youtube.com/@nadistuti" class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                {t('community.subscribe', currentLang)}
              </a>
            </div>
          </div>

          <!-- GitHub Repository -->
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-gray-800 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{t('community.github.title', currentLang)}</h3>
                <p class="text-sm text-gray-600">{t('community.github.subtitle', currentLang)}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4 text-multilang">
              Contribute to our open source project! Help improve the website, add new content, fix bugs, or suggest new features for the community.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">247 contributors</span>
              <a href="https://github.com/nadi-stuti/website" class="bg-gray-800 hover:bg-gray-900 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                {t('community.contribute', currentLang)}
              </a>
            </div>
          </div>

          <!-- Reddit Community -->
          <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-4">
              <div class="w-12 h-12 bg-orange-500 rounded-full flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-semibold text-gray-900">{t('community.reddit.title', currentLang)}</h3>
                <p class="text-sm text-gray-600">{t('community.reddit.subtitle', currentLang)}</p>
              </div>
            </div>
            <p class="text-gray-700 mb-4 text-multilang">
              Join our Reddit community for in-depth discussions, Q&A sessions, sharing of research, and connecting with scholars and enthusiasts worldwide.
            </p>
            <div class="flex items-center justify-between">
              <span class="text-sm text-gray-500">3,891 members</span>
              <a href="https://reddit.com/r/nadistuti" class="bg-orange-500 hover:bg-orange-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors">
                {t('community.joinCommunity', currentLang)}
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Community Guidelines -->
    <section id="guidelines" class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-xl shadow-lg p-8 mb-16">
          <h2 class="text-2xl font-bold text-gray-900 mb-6">{t('community.guidelines', currentLang)}</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-green-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('community.whatWeEncourage', currentLang)}
              </h3>
              <ul class="space-y-2 text-gray-700">
                <li>• Respectful discussions about sacred rivers and Hindu culture</li>
                <li>• Sharing of knowledge, research, and personal experiences</li>
                <li>• Questions about Sanskrit, pronunciation, and meanings</li>
                <li>• Constructive feedback and suggestions for improvement</li>
                <li>• Collaborative projects and content creation</li>
                <li>• Cultural exchange and learning from different perspectives</li>
              </ul>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                <svg class="w-5 h-5 text-red-500 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                </svg>
                {t('community.whatWeDontAllow', currentLang)}
              </h3>
              <ul class="space-y-2 text-gray-700">
                <li>• Disrespectful comments about any religion or culture</li>
                <li>• Spam, promotional content, or off-topic discussions</li>
                <li>• Harassment, hate speech, or discriminatory language</li>
                <li>• Sharing of copyrighted content without permission</li>
                <li>• Political debates or controversial non-cultural topics</li>
                <li>• Personal attacks or inflammatory behavior</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Community Highlights -->
        <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white rounded-xl p-8">
          <h2 class="text-2xl font-bold mb-6">{t('community.highlights', currentLang)}</h2>
          <div class="grid md:grid-cols-3 gap-6">
            <div class="text-center">
              <div class="text-3xl font-bold mb-2">25,000+</div>
              <div class="text-blue-200">{t('community.activeMembers', currentLang)}</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold mb-2">150+</div>
              <div class="text-blue-200">{t('community.contributors', currentLang)}</div>
            </div>
            <div class="text-center">
              <div class="text-3xl font-bold mb-2">12</div>
              <div class="text-blue-200">{t('community.languagesSupported', currentLang)}</div>
            </div>
          </div>
          <div class="mt-8 text-center">
            <p class="text-blue-100 mb-4">
              {t('community.description', currentLang)}
            </p>
            <a href="/donate" class="bg-white text-blue-600 px-6 py-3 rounded-lg font-semibold hover:bg-blue-50 transition-colors">
              {t('community.supportMission', currentLang)}
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>