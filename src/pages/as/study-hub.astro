---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getLanguageFromURL } from '../../i18n';
import { t } from '../../i18n/translations';

const currentLang = getLanguageFromURL(Astro.url.pathname);
---

<Layout 
  title={t('studyhub.title', currentLang)} 
  description={t('studyhub.description', currentLang)}
  lang={currentLang}
>
  <Header />
  
  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
    <!-- Page Header -->
    <section class="py-16 bg-gradient-to-r from-teal-500 to-blue-600 text-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <div class="flex justify-center mb-6">
            <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center">
              <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
          </div>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-multilang">
            অধ্যয়ন কেন্দ্ৰ
          </h1>
          <p class="text-xl md:text-2xl mb-8 text-blue-100 max-w-4xl mx-auto text-multilang">
            পবিত্ৰ নদীসমূহৰ বাবে আপোনাৰ বিস্তৃত জ্ঞানৰ ভাণ্ডাৰ - ঐতিহাসিক ঘটনা, শাস্ত্ৰ, গৱেষণা পত্ৰ আৰু পণ্ডিত সম্পদ
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="#resources" class="bg-white text-sky-600 px-8 py-3 rounded-lg font-semibold hover:bg-sky-50 transition-all transform hover:scale-105">
              সম্পদসমূহ চাওক
            </a>
            <a href="#contribute" class="bg-sky-800 text-white px-8 py-3 rounded-lg font-semibold hover:bg-sky-900 transition-all border border-sky-500">
              জ্ঞান অৱদান কৰক
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Stats -->
    <section class="py-12 bg-white">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
          <div>
            <div class="text-3xl font-bold text-blue-600 mb-2">150+</div>
            <div class="text-gray-600">Research Papers</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-green-600 mb-2">75+</div>
            <div class="text-gray-600">Historical Documents</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-orange-600 mb-2">50+</div>
            <div class="text-gray-600">পবিত্ৰ আচাৰ-অনুষ্ঠান</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-purple-600 mb-2">6</div>
            <div class="text-gray-600">Quick Handbooks</div>
          </div>
        </div>
      </div>
    </section>

    <!-- Search Section -->
    <section class="py-16 bg-gradient-to-br from-teal-500 to-blue-600">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Search Knowledge Base</h2>
        <p class="text-xl text-teal-100 mb-8">Find study materials, research papers, and resources about sacred rivers</p>
        
        <div class="relative max-w-2xl mx-auto">
          <input 
            type="text" 
            placeholder="Search for rivers, topics, or keywords..." 
            class="w-full px-6 py-4 pr-12 text-lg rounded-lg border-0 focus:ring-4 focus:ring-white/30 focus:outline-none shadow-lg"
          >
          <button class="absolute right-2 top-2 bg-teal-500 text-white p-2 rounded-lg hover:bg-teal-600 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </button>
        </div>
        
        <div class="mt-6 flex flex-wrap justify-center gap-2">
          <span class="text-teal-100 text-sm">Popular topics:</span>
          <a href="/as/study-hub/historical" class="bg-white/20 text-white px-3 py-1 rounded-full text-sm hover:bg-white/30 transition-colors">Historical Events</a>
          <a href="/as/study-hub/scriptures" class="bg-white/20 text-white px-3 py-1 rounded-full text-sm hover:bg-white/30 transition-colors">Sacred Texts</a>
          <a href="/as/study-hub/research" class="bg-white/20 text-white px-3 py-1 rounded-full text-sm hover:bg-white/30 transition-colors">Research Papers</a>
        </div>
      </div>
    </section>

    <!-- Study Categories -->
    <section id="resources" class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">জ্ঞানৰ শ্ৰেণীসমূহ</h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            শ্ৰেণী অনুসাৰে আমাৰ সংগঠিত অধ্যয়ন সামগ্ৰীৰ সংগ্ৰহ চাওক
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          
          <!-- Historical Events -->
          <a href="/as/study-hub/historical" class="group bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-amber-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-amber-100 rounded-lg flex items-center justify-center group-hover:bg-amber-200 transition-colors">
                  <svg class="w-6 h-6 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-amber-700 transition-colors">Historical Events</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">Documented historical events, battles, and civilizations along rivers</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">75+ Documents</span>
                  <span>Last updated: 2 days ago</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-amber-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Sacred Scriptures -->
          <a href="/as/study-hub/scriptures" class="group bg-gray-100 rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-purple-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center group-hover:bg-purple-200 transition-colors">
                  <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-purple-700 transition-colors">Sacred Scriptures</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">Ancient texts, hymns, and writings by saints about sacred rivers</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">200+ References</span>
                  <span class="text-red-500">coming soon</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-purple-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Research Papers -->
          <a href="/as/study-hub/research" class="group bg-gray-100 rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-green-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center group-hover:bg-green-200 transition-colors">
                  <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-green-700 transition-colors">Research Papers</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">Scholarly papers, research studies, and academic publications</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">150+ Papers</span>
                  <span class="text-red-500">coming soon</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-green-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Interactive Slideshows -->
          <a href="/as/study-hub/slideshows" class="group bg-gray-100 rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-pink-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-pink-100 rounded-lg flex items-center justify-center group-hover:bg-pink-200 transition-colors">
                  <svg class="w-6 h-6 text-pink-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m0 0V1a1 1 0 011-1h2a1 1 0 011 1v18a1 1 0 01-1 1H4a1 1 0 01-1-1V1a1 1 0 011-1h2a1 1 0 011 1v3m0 0h8m-8 0V4a1 1 0 011-1h6a1 1 0 011 1v0"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-pink-700 transition-colors">Interactive Slideshows</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">Visual presentations, photo galleries, and educational content</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">50+ Presentations</span>
                  <span class="text-red-500">coming soon</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-pink-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Maps & Geography -->
          <a href="/as/study-hub/geography" class="group bg-gray-100 rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-blue-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center group-hover:bg-blue-200 transition-colors">
                  <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-1.447-.894L15 4m0 13V4m0 0L9 7"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-700 transition-colors">Maps & Geography</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">Historical maps, surveys, and topographical studies</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">85+ Maps</span>
                  <span class="text-red-500">coming soon</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-blue-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Multimedia Resources -->
          <a href="/as/study-hub/multimedia" class="group bg-gray-100 rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-red-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center group-hover:bg-red-200 transition-colors">
                  <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-red-700 transition-colors">Multimedia Resources</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">Documentaries, audio recordings, and educational videos</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">120+ Files</span>
                  <span class="text-red-500">coming soon</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-red-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Handbooks -->
          <a href="/as/study-hub/handbooks" class="group bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-indigo-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center group-hover:bg-indigo-200 transition-colors">
                  <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-indigo-700 transition-colors">হেণ্ডবুক</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">পবিত্ৰ নদীসমূহৰ বাবে দ্ৰুত সন্দৰ্ভ গাইড আৰু চিট-শ্বীট</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">6 Handbooks</span>
                  <span>Last updated: 1 day ago</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-indigo-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Rituals -->
          <a href="/as/study-hub/rituals" class="group bg-gray-100 rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-orange-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-orange-100 rounded-lg flex items-center justify-center group-hover:bg-orange-200 transition-colors">
                  <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-orange-700 transition-colors">পবিত্ৰ আচাৰ-অনুষ্ঠান</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">পবিত্ৰ নদীসমূহত আধ্যাত্মিক লাভৰ বাবে আচাৰ-অনুষ্ঠানৰ বিস্তৃত নিৰ্দেশনা</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">50+ Rituals</span>
                  <span class="text-red-500">coming soon</span>
                </div>
              </div>
              <div class="flex-shrink-0">
                <svg class="w-5 h-5 text-gray-400 group-hover:text-orange-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
            </div>
          </a>

          <!-- Holy Calendar -->
          <a href="/as/study-hub/holy-calendar" class="group bg-gray-100 rounded-lg border border-gray-200 p-6 hover:shadow-lg hover:border-emerald-300 transition-all duration-200">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0">
                <div class="w-12 h-12 bg-emerald-100 rounded-lg flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
                  <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4m-6 0h6m-6 0V7a1 1 0 00-1 1v10a1 1 0 001 1h8a1 1 0 001-1V8a1 1 0 00-1-1h-1"></path>
                  </svg>
                </div>
              </div>
              <div class="flex-1 min-w-0">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-emerald-700 transition-colors">পবিত্ৰ পঞ্জিকা</h3>
                <p class="text-sm text-gray-600 mt-1 mb-3">পবিত্ৰ তাৰিখ আৰু অনুষ্ঠানৰ পঞ্জিকা - অতীত আৰু আগন্তুক উৎসৱসমূহ</p>
                <div class="flex items-center text-xs text-gray-500">
                  <span class="bg-gray-100 px-2 py-1 rounded mr-2">365+ Events</span>
                  <span class="text-red-500">coming soon</span>
                </div>
              </div>
              <div class="flex-shrink-0">
