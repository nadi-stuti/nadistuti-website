---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getLanguageFromURL, getLocalizedPath } from '../../../i18n';
import { t } from '../../../i18n/translations';
const currentLang = 'te';
---

<Layout 
  title={`${t('river.krishna', currentLang)} - Nadi Stuti`} 
  description={`Discover the sacred ${t('river.krishna', currentLang)} river`}
  lang={currentLang}
>
  <Header />
  
    
  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b border-gray-200" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-4 py-4">
        <a 
          href={getLocalizedPath("/", currentLang)}
          class="text-gray-500 hover:text-gray-700 transition-colors"
        >
          {t("ui.home", currentLang)}
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a 
          href={getLocalizedPath("/rivers", currentLang)}
          class="text-gray-500 hover:text-gray-700 transition-colors"
        >
          {t("nav.rivers", currentLang)}
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium">
          {t(`river.krishna`, currentLang)}
        </span>
      </div>
    </div>
  </nav><main>
        
    <!-- Hero Section -->
    <section class="relative h-96 overflow-hidden">
      <div class="absolute inset-0">
        <img 
          src="/images/krishna-river.jpg" 
          alt="Krishna River" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>
      <div class="relative z-10 h-full flex items-center justify-center text-white text-center">
        <div>
          <h1 class="text-5xl font-bold mb-4 text-multilang">
            <span class="block text-2xl font-normal mb-2 text-blue-200 font-sanskrit">
              {/* Sanskrit name will be added based on language */}
            </span>
            {t('river.krishna', currentLang)}
          </h1>
          <p class="text-xl text-gray-200 text-multilang">The Sacred River of South India</p>
        </div>
      </div>
    </section>

    <!-- Content Sections -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- {t('river.geographical.title', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.geographical.title', currentLang)}</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-indigo-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.basic.info', currentLang)}</h3>
            <dl class="space-y-2">
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.source', currentLang)}</dt>
                <dd class="text-gray-900">{t('krishna.source.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.length', currentLang)}</dt>
                <dd class="text-gray-900">{t('krishna.length.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">Basin Area:</dt>
                <dd class="text-gray-900">258,948 km²</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">Mouth:</dt>
                <dd class="text-gray-900">Bay of Bengal</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">States:</dt>
                <dd class="text-gray-900">Maharashtra, Karnataka, Telangana, Andhra Pradesh</dd>
              </div>
            </dl>
          </div>
          
          <div class="bg-purple-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.sacred.geography', currentLang)}</h3>
            <ul class="space-y-2 text-gray-700">
              <li>• <strong>Mahabaleshwar:</strong> Sacred source in Western Ghats</li>
              <li>• <strong>Sangli:</strong> Important cultural center</li>
              <li>• <strong>Vijayawada:</strong> Major city on the banks</li>
              <li>• <strong>Amaravati:</strong> Ancient Buddhist site</li>
              <li>• <strong>Machilipatnam:</strong> Historic port city</li>
              <li>• <strong>Hamsaladeevi:</strong> Mouth at Bay of Bengal</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- {t('river.major.tributaries', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.major.tributaries', currentLang)}</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.left.bank', currentLang)}</h3>
            <ul class="space-y-3">
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-indigo-500">
                <strong class="text-gray-900">Bhima:</strong>
                <span class="text-gray-600"> Major tributary flowing through Maharashtra and Karnataka</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-indigo-500">
                <strong class="text-gray-900">Tungabhadra:</strong>
                <span class="text-gray-600"> Confluence of Tunga and Bhadra rivers</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-indigo-500">
                <strong class="text-gray-900">Musi:</strong>
                <span class="text-gray-600"> Flows through Hyderabad</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.right.bank', currentLang)}</h3>
            <ul class="space-y-3">
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-purple-500">
                <strong class="text-gray-900">Koyna:</strong>
                <span class="text-gray-600"> Important tributary in Maharashtra</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-purple-500">
                <strong class="text-gray-900">Wardha:</strong>
                <span class="text-gray-600"> Flows through Maharashtra</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-purple-500">
                <strong class="text-gray-900">Dindi:</strong>
                <span class="text-gray-600"> Tributary in Karnataka</span>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Cultural and Religious Significance -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.cultural.significance', currentLang)}</h2>
        <div class="prose prose-lg max-w-none">
          <div class="bg-gradient-to-r from-indigo-50 to-purple-50 p-8 rounded-lg mb-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Sacred River of South India</h3>
            <p class="text-gray-700 leading-relaxed">
              The Krishna River is one of the most sacred rivers of South India, named after Lord Krishna. The river 
              originates from the mouth of a cow statue at Mahabaleshwar, symbolizing the sacred cow in Hindu tradition. 
              The river has been the lifeline of several ancient kingdoms and continues to be central to the cultural 
              and spiritual life of millions. It's considered one of the seven sacred rivers (Sapta Sindhu) mentioned 
              in Hindu scriptures.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-indigo-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-gray-900 mb-3">{t('river.sacred.festivals', currentLang)}</h4>
              <ul class="space-y-2 text-gray-700">
                <li>• <strong>Krishna Pushkaram:</strong> Once in 12 years grand celebration</li>
                <li>• <strong>Makar Sankranti:</strong> Sacred bathing festival</li>
                <li>• <strong>Krishna Janmashtami:</strong> Lord Krishna's birthday</li>
                <li>• <strong>Ganga Aarti:</strong> Evening prayers at ghats</li>
              </ul>
            </div>
            
            <div class="bg-purple-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-gray-900 mb-3">Historical Significance</h4>
              <ul class="space-y-2 text-gray-700">
                <li>• <strong>Vijayanagara Empire:</strong> Flourished on its banks</li>
                <li>• <strong>Amaravati:</strong> Ancient Buddhist center</li>
                <li>• <strong>Hampi:</strong> UNESCO World Heritage site</li>
                <li>• <strong>Vijayawada:</strong> Important trading center</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- {t('river.scriptural.references', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.scriptural.references', currentLang)}</h2>
        <div class="space-y-6">
          <div class="bg-gradient-to-r from-indigo-100 to-purple-100 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Skanda Purana</h3>
            <p class="text-gray-700">
              "The river Krishna, flowing from the sacred Sahyadri mountains, purifies all sins and grants prosperity 
              to those who worship her with devotion."
            </p>
          </div>
          
          <div class="bg-indigo-100 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Brahma Purana</h3>
            <p class="text-gray-700">
              "Among all rivers of the Deccan, Krishna is the most sacred. Bathing in her waters during Pushkaram 
              grants the merit of performing a thousand Ashwamedha yajnas."
            </p>
          </div>
          
          <div class="bg-purple-100 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-3">Mahabharata Reference</h3>
            <p class="text-gray-700">
              "The river Krishna is mentioned as one of the sacred rivers where sages performed penance and 
              attained spiritual enlightenment."
            </p>
          </div>
        </div>
      </section>

      <!-- Download PDF -->
      <section class="text-center">
        <div class="bg-gradient-to-r from-indigo-600 to-purple-600 text-white p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-4">Complete Krishna Information</h3>
          <p class="text-indigo-100 mb-6">
            Download a comprehensive PDF with detailed information about Krishna river, including maps, tributaries, and cultural significance.
          </p>
          <a 
            href="/data/river report/Krishna-report.pdf" target="_blank"
            class="inline-flex items-center bg-white text-indigo-600 px-8 py-3 rounded-lg font-semibold hover:bg-indigo-50 transition-all transform hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Download Krishna PDF
          </a>
        </div>
      </section>
    </div>
    <!-- Back to Rivers Button -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-t border-gray-200 mt-16">
      <a 
        href={getLocalizedPath("/rivers", currentLang)}
        class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors group"
      >
        <svg 
          class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        {t("ui.back_to_rivers", currentLang)}
      </a>
    </div>
  </main>

  <Footer />
</Layout>

