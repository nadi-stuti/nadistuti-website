---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getLanguageFromURL, getLocalizedPath } from '../../../i18n';
import { t } from '../../../i18n/translations';
const currentLang = 'te';
---

<Layout 
  title={`${t('river.yamuna', currentLang)} - Nadi Stuti`} 
  description={`Discover the sacred ${t('river.yamuna', currentLang)} river`}
  lang={currentLang}
>
  <Header />
  
    
  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b border-gray-200" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-4 py-4">
        <a 
          href={getLocalizedPath("/", currentLang)}
          class="text-gray-500 hover:text-gray-700 transition-colors"
        >
          {t("ui.home", currentLang)}
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a 
          href={getLocalizedPath("/rivers", currentLang)}
          class="text-gray-500 hover:text-gray-700 transition-colors"
        >
          {t("nav.rivers", currentLang)}
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium">
          {t(`river.yamuna`, currentLang)}
        </span>
      </div>
    </div>
  </nav><main>
        
    <!-- Hero Section -->
    <section class="relative h-96 overflow-hidden">
      <div class="absolute inset-0">
        <img 
          src="/images/yamuna-mathura.jpg" 
          alt="Yamuna at Mathura" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>
      <div class="relative z-10 h-full flex items-center justify-center text-white text-center">
        <div>
          <h1 class="text-5xl font-bold mb-4 text-multilang">
            <span class="block text-2xl font-normal mb-2 text-blue-200 font-sanskrit">
              {/* Sanskrit name will be added based on language */}
            </span>
            {t('river.yamuna', currentLang)}
          </h1>
          <p class="text-xl text-gray-200 text-multilang">The Beloved River of Lord Krishna</p>
        </div>
      </div>
    </section>

    <!-- Content Sections -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- {t('river.geographical.title', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.geographical.title', currentLang)}</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-purple-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.basic.info', currentLang)}</h3>
            <dl class="space-y-2">
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.source', currentLang)}</dt>
                <dd class="text-gray-900">{t('yamuna.source.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.length', currentLang)}</dt>
                <dd class="text-gray-900">{t('yamuna.length.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">Basin Area:</dt>
                <dd class="text-gray-900">366,223 km²</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">Mouth:</dt>
                <dd class="text-gray-900">Confluence with Ganga at Allahabad</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">States:</dt>
                <dd class="text-gray-900">Uttarakhand, Himachal Pradesh, Haryana, Delhi, UP</dd>
              </div>
            </dl>
          </div>
          
          <div class="bg-blue-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.sacred.geography', currentLang)}</h3>
            <ul class="space-y-2 text-gray-700">
              <li>• <strong>Yamunotri:</strong> Sacred source and temple</li>
              <li>• <strong>Mathura:</strong> Birthplace of Lord Krishna</li>
              <li>• <strong>Vrindavan:</strong> Krishna's childhood playground</li>
              <li>• <strong>Gokul:</strong> Krishna's foster home</li>
              <li>• <strong>Delhi:</strong> Flows through the capital</li>
              <li>• <strong>Allahabad:</strong> Sacred confluence with Ganga</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Cultural and Religious Significance -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.cultural.significance', currentLang)}</h2>
        <div class="prose prose-lg max-w-none">
          <div class="bg-gradient-to-r from-purple-50 to-blue-50 p-8 rounded-lg mb-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Krishna's Beloved River</h3>
            <p class="text-gray-700 leading-relaxed">
              Yamuna holds a special place in Hindu mythology as the beloved river of Lord Krishna. According to legends, 
              Krishna spent his childhood playing on the banks of Yamuna in Vrindavan and Gokul. The river is personified 
              as Yamuna Devi, daughter of Surya (Sun God) and sister of Yama (God of Death). She is considered one of the 
              most sacred rivers and bathing in her waters is believed to free one from the fear of death.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-purple-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-gray-900 mb-3">Krishna Leelas</h4>
              <ul class="space-y-2 text-gray-700">
                <li>• <strong>Kaliya Daman:</strong> Krishna subduing the serpent Kaliya</li>
                <li>• <strong>Govardhan Leela:</strong> Lifting the mountain</li>
                <li>• <strong>Raas Leela:</strong> Divine dance with Gopis</li>
                <li>• <strong>Makhan Chori:</strong> Butter stealing episodes</li>
              </ul>
            </div>
            
            <div class="bg-blue-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-gray-900 mb-3">{t('river.sacred.festivals', currentLang)}</h4>
              <ul class="space-y-2 text-gray-700">
                <li>• <strong>Janmashtami:</strong> Krishna's birthday celebration</li>
                <li>• <strong>Yamuna Chhath:</strong> Dedicated to Yamuna Devi</li>
                <li>• <strong>Kartik Purnima:</strong> Sacred bathing day</li>
                <li>• <strong>Braj Holi:</strong> Festival of colors</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- {t('river.major.tributaries', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.major.tributaries', currentLang)}</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.right.bank', currentLang)}</h3>
            <ul class="space-y-3">
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-purple-500">
                <strong class="text-gray-900">Chambal:</strong>
                <span class="text-gray-600"> Major tributary flowing through Rajasthan and MP</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-purple-500">
                <strong class="text-gray-900">Betwa:</strong>
                <span class="text-gray-600"> Flows through UP and MP</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-purple-500">
                <strong class="text-gray-900">Ken:</strong>
                <span class="text-gray-600"> River in Bundelkhand region</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.left.bank', currentLang)}</h3>
            <ul class="space-y-3">
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-blue-500">
                <strong class="text-gray-900">Tons:</strong>
                <span class="text-gray-600"> Largest tributary of Yamuna</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-blue-500">
                <strong class="text-gray-900">Hindon:</strong>
                <span class="text-gray-600"> Flows through western UP</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-blue-500">
                <strong class="text-gray-900">Sasur Khaderi:</strong>
                <span class="text-gray-600"> Small tributary in Haryana</span>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Download PDF -->
      <section class="text-center">
        <div class="bg-gradient-to-r from-purple-600 to-blue-600 text-white p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-4">Complete Yamuna Information</h3>
          <p class="text-purple-100 mb-6">
            Download a comprehensive PDF with detailed information about Yamuna, including Krishna leelas, maps, and cultural significance.
          </p>
          <a 
            href="/data/river report/Yamuna-report.pdf" target="_blank"
            class="inline-flex items-center bg-white text-purple-600 px-8 py-3 rounded-lg font-semibold hover:bg-purple-50 transition-all transform hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Download Yamuna PDF
          </a>
        </div>
      </section>
    </div>
    <!-- Back to Rivers Button -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-t border-gray-200 mt-16">
      <a 
        href={getLocalizedPath("/rivers", currentLang)}
        class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors group"
      >
        <svg 
          class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        {t("ui.back_to_rivers", currentLang)}
      </a>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .font-sanskrit {
    font-family: 'Noto Sans Devanagari', 'Arial Unicode MS', sans-serif;
  }
</style>

