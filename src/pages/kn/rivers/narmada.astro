---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { getLanguageFromURL, getLocalizedPath } from '../../../i18n';
import { t } from '../../../i18n/translations';
const currentLang = 'kn';
---

<Layout 
  title={`${t('river.narmada', currentLang)} - Nadi Stuti`} 
  description={`Discover the sacred ${t('river.narmada', currentLang)} river`}
  lang={currentLang}
>
  <Header />
  
    
  <!-- Breadcrumbs -->
  <nav class="bg-gray-50 border-b border-gray-200" aria-label="Breadcrumb">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center space-x-4 py-4">
        <a 
          href={getLocalizedPath("/", currentLang)}
          class="text-gray-500 hover:text-gray-700 transition-colors"
        >
          {t("ui.home", currentLang)}
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <a 
          href={getLocalizedPath("/rivers", currentLang)}
          class="text-gray-500 hover:text-gray-700 transition-colors"
        >
          {t("nav.rivers", currentLang)}
        </a>
        <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
        <span class="text-gray-900 font-medium">
          {t(`river.narmada`, currentLang)}
        </span>
      </div>
    </div>
  </nav><main>
        
    <!-- Hero Section -->
    <section class="relative h-96 overflow-hidden">
      <div class="absolute inset-0">
        <img 
          src="/images/narmada-marble-rocks.jpg" 
          alt="Narmada at Marble Rocks" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-black/50"></div>
      </div>
      <div class="relative z-10 h-full flex items-center justify-center text-white text-center">
        <div>
          <h1 class="text-5xl font-bold mb-4 text-multilang">
            <span class="block text-2xl font-normal mb-2 text-blue-200 font-sanskrit">
              नर्मदा
            </span>
            {t('river.narmada', currentLang)}
          </h1>
          <p class="text-xl text-gray-200 text-multilang">The Westward Flowing Sacred River</p>
        </div>
      </div>
    </section>

    <!-- Content Sections -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      
      <!-- {t('river.geographical.title', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.geographical.title', currentLang)}</h2>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="bg-teal-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.basic.info', currentLang)}</h3>
            <dl class="space-y-2">
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.source', currentLang)}</dt>
                <dd class="text-gray-900">{t('narmada.source.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">{t('river.length', currentLang)}</dt>
                <dd class="text-gray-900">{t('narmada.length.value', currentLang)}</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">Basin Area:</dt>
                <dd class="text-gray-900">98,796 km²</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">Mouth:</dt>
                <dd class="text-gray-900">Arabian Sea (Gulf of Khambhat)</dd>
              </div>
              <div class="flex justify-between">
                <dt class="font-medium text-gray-700">States:</dt>
                <dd class="text-gray-900">MP, Maharashtra, Gujarat</dd>
              </div>
            </dl>
          </div>
          
          <div class="bg-cyan-50 p-6 rounded-lg">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.sacred.geography', currentLang)}</h3>
            <ul class="space-y-2 text-gray-700">
              <li>• <strong>Amarkantak:</strong> Sacred source, origin of three rivers</li>
              <li>• <strong>Omkareshwar:</strong> Jyotirlinga temple on island</li>
              <li>• <strong>Maheshwar:</strong> Holy city with ghats</li>
              <li>• <strong>Jabalpur:</strong> Marble Rocks and Dhuandhar Falls</li>
              <li>• <strong>Bharuch:</strong> Ancient port city</li>
              <li>• <strong>Shoolpaneshwar:</strong> Temple in Gujarat</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Cultural and Religious Significance -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.cultural.significance', currentLang)}</h2>
        <div class="prose prose-lg max-w-none">
          <div class="bg-gradient-to-r from-teal-50 to-cyan-50 p-8 rounded-lg mb-8">
            <h3 class="text-xl font-semibold text-gray-900 mb-4">The Purifier</h3>
            <p class="text-gray-700 leading-relaxed">
              Narmada is considered one of the most sacred rivers in Hindu tradition. Unlike other rivers that flow eastward, 
              Narmada flows westward, making it unique. According to legend, the river was born from Lord Shiva's perspiration 
              during his cosmic dance. The river is believed to be so pure that even seeing it can cleanse sins. The Narmada 
              Parikrama (circumambulation) is considered one of the most sacred pilgrimages, taking 3 years, 3 months, and 13 days.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-teal-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-gray-900 mb-3">Sacred Practices</h4>
              <ul class="space-y-2 text-gray-700">
                <li>• <strong>Narmada Parikrama:</strong> Sacred circumambulation</li>
                <li>• <strong>Narmada Stones:</strong> Natural Shiva lingas</li>
                <li>• <strong>Ganga Aarti:</strong> Evening prayers at ghats</li>
                <li>• <strong>Kartik Purnima:</strong> Sacred bathing festival</li>
              </ul>
            </div>
            
            <div class="bg-cyan-50 p-6 rounded-lg">
              <h4 class="text-lg font-semibold text-gray-900 mb-3">Jyotirlinga Temples</h4>
              <ul class="space-y-2 text-gray-700">
                <li>• <strong>Omkareshwar:</strong> On Mandhata island</li>
                <li>• <strong>Maheshwar:</strong> Ancient temple complex</li>
                <li>• <strong>Amarkantak:</strong> Source temple</li>
                <li>• <strong>Shoolpaneshwar:</strong> In Narmada valley</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- {t('river.major.tributaries', currentLang)} -->
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-multilang">{t('river.major.tributaries', currentLang)}</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.left.bank', currentLang)}</h3>
            <ul class="space-y-3">
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-teal-500">
                <strong class="text-gray-900">Hiran:</strong>
                <span class="text-gray-600"> Major tributary in Madhya Pradesh</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-teal-500">
                <strong class="text-gray-900">Tawa:</strong>
                <span class="text-gray-600"> Important tributary with dam</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-teal-500">
                <strong class="text-gray-900">Shakkar:</strong>
                <span class="text-gray-600"> Flows through MP</span>
              </li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">{t('river.right.bank', currentLang)}</h3>
            <ul class="space-y-3">
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-cyan-500">
                <strong class="text-gray-900">Orsang:</strong>
                <span class="text-gray-600"> Flows through Gujarat</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-cyan-500">
                <strong class="text-gray-900">Amaravati:</strong>
                <span class="text-gray-600"> Tributary in MP</span>
              </li>
              <li class="bg-white p-4 rounded-lg shadow-sm border-l-4 border-cyan-500">
                <strong class="text-gray-900">Kolar:</strong>
                <span class="text-gray-600"> Small tributary</span>
              </li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Download PDF -->
      <section class="text-center">
        <div class="bg-gradient-to-r from-teal-600 to-cyan-600 text-white p-8 rounded-lg">
          <h3 class="text-2xl font-bold mb-4">Complete Narmada Information</h3>
          <p class="text-teal-100 mb-6">
            Download a comprehensive PDF with detailed information about Narmada, including parikrama route, temples, and cultural significance.
          </p>
          <a 
            href="/data/river report/Narmada-report.pdf" target="_blank"
            class="inline-flex items-center bg-white text-teal-600 px-8 py-3 rounded-lg font-semibold hover:bg-teal-50 transition-all transform hover:scale-105"
          >
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
            Download Narmada PDF
          </a>
        </div>
      </section>
    </div>
    <!-- Back to Rivers Button -->
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 border-t border-gray-200 mt-16">
      <a 
        href={getLocalizedPath("/rivers", currentLang)}
        class="inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors group"
      >
        <svg 
          class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" 
          fill="none" 
          stroke="currentColor" 
          viewBox="0 0 24 24"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        {t("ui.back_to_rivers", currentLang)}
      </a>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  .font-sanskrit {
    font-family: 'Noto Sans Devanagari', 'Arial Unicode MS', sans-serif;
  }
</style>

